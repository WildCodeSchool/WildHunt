        <activity
            android:name=".old.ProfileActivity"
            android:label="@string/title_activity_profile_"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".old.RulesActivity"
            android:label="Rules"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".old.PlayerActivity"
            android:label="Play"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
